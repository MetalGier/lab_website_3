<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <% 
				var image;
				if(player_id){
					image = playerinfo.img_src;
					}
				else{image = '../resources/img/helmet.jpg'}
				  
				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							<% 
								var allButtons = '';
								names.forEach(function(input){
								allButtons+='<option selected value='+input.id+'>'+input.name+'</option>';

								});
							allButtons+='</select>'+'</form>';
							%>
							<%- allButtons %>

							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id, 
							 			but will display the player's name-->
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
							<td><%- playerinfo.year %>	</td>
						</tr>
						<tr>
							<th>Major</th>
							<td> <%- playerinfo.major %>	</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td><%- gamecount %>	</td>
						</tr>
						<tr>
							<td>Passing Yards: <%- playerinfo.passing_yards %> </td>
							<td>Avg. Passing Yards: <% var avgyds = playerinfo.passing_yards / gamecount %> <%- avgyds %></td>
						</tr>
						<tr>
							<td>Rushing Yards: <%- playerinfo.rushing_yards %></td>
							<td>Avg. Rushing Yards: <% var avgryds = playerinfo.rushing_yards / gamecount %> <%- avgryds %></td>
						</tr>
						<tr>
							<td>Receiving Yards: <%- playerinfo.receiving_yards %></td>
							<td>Avg. Receiving Yards: <% var avgcyds = playerinfo.receiving_yards / gamecount %> <%- avgcyds %> </td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>
